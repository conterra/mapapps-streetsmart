{
    "name": "dn_streetsmart",
    "version": "1.8.1-SNAPSHOT",
    "title": "${bundleTitle}",
    "description": "${bundleDescription}",
    "vendor": "con terra GmbH",
    "keywords": [
        "streetsmart"
    ],
    "icon": {},
    "productName": "devnet-mapapps-streetsmart",
    "dependencies": {
        "@arcgis/core": "^4.33.0",
        "coordinatetransformer": "^4.20.0",
        "geojson": "^4.20.0",
        "highlights": "^4.20.0"
    },
    "layout-widgets": [
        {
            "widgetRole": "streetSmartWidget",
            "template": "streetsmart",
            "attachTo": "streetsmart"
        },
        {
            "widgetRole": "streetSmartWidget",
            "template": "streetsmart",
            "sublayout": [
                "mobile_portrait"
            ],
            "window": {
                "dockTool": "streetSmartToggleTool",
                "collapsable": true,
                "resizable": false,
                "draggable": false,
                "marginBox": {
                    "t": 0,
                    "b": 40,
                    "r": 0,
                    "l": 0
                },
                "collapseAxis": {
                    "l": true
                },
                "windowClass": "noPadding"
            }
        },
        {
            "widgetRole": "streetSmartWidget",
            "template": "streetsmart",
            "sublayout": [
                "mobile_landscape"
            ],
            "window": {
                "dockTool": "streetSmartToggleTool",
                "collapsable": true,
                "resizable": false,
                "draggable": false,
                "marginBox": {
                    "t": 0,
                    "b": 0,
                    "r": 0,
                    "w": "50%"
                },
                "collapseAxis": {
                    "l": true
                },
                "windowClass": "noPadding"
            }
        },
        {
            "widgetRole": "streetSmartWidget",
            "template": "seasons",
            "window": {
                "dockTool": "streetSmartToggleTool",
                "dockable": true,
                "autofocus": false,
                "minimizeOnClose": true,
                "resizable": false,
                "draggable": false,
                "closable": true,
                "collapsable": true,
                "collapseAxis": {
                    "l": true
                },
                "windowClass": "noPadding"
            }
        },
        {
            "widgetRole": "streetSmartWidget",
            "template": "seasons",
            "sublayout": [
                "desktop",
                "tablet_landscape",
                "tablet_portrait"
            ],
            "window": {
                "marginBox": {
                    "t": 42,
                    "b": 40,
                    "r": 0,
                    "w": "50%"
                }
            }
        },
        {
            "widgetRole": "streetSmartWidget",
            "template": "seasons",
            "sublayout": [
                "mobile_portrait"
            ],
            "window": {
                "marginBox": {
                    "t": 0,
                    "b": 40,
                    "r": 0,
                    "l": 0
                }
            }
        },
        {
            "widgetRole": "streetSmartWidget",
            "template": "seasons",
            "sublayout": [
                "mobile_landscape"
            ],
            "window": {
                "marginBox": {
                    "t": 0,
                    "b": 0,
                    "r": 0,
                    "w": "50%"
                }
            }
        }
    ],
    "components": [
        {
            "name": "StreetSmartController",
            "provides": [
                "ct.framework.api.EventHandler",
                "dn_streetsmart.StreetSmartController"
            ],
            "references": [
                {
                    "name": "_streetSmartModel",
                    "providing": "dn_streetsmart.StreetSmartModel"
                },
                {
                    "name": "_markerController",
                    "providing": "dn_streetsmart.MarkerController"
                },
                {
                    "name": "_measurementController",
                    "providing": "dn_streetsmart.MeasurementController"
                },
                {
                    "name": "_mapWidgetModel",
                    "providing": "map-widget.MapWidgetModel"
                },
                {
                    "name": "_coordinateTransformer",
                    "providing": "ct.api.coordinatetransformer.CoordinateTransformer"
                },
                {
                    "name": "_logger",
                    "providing": "ct.framework.api.LogService"
                },
                {
                    "name": "_appCtx",
                    "providing": "ct.framework.api.ApplicationContext"
                },
                {
                    "name": "tool",
                    "providing": "ct.tools.Tool",
                    "filter": "(id=streetSmartModeToggleTool)",
                    "cardinality": "0..1"
                }
            ]
        },
        {
            "name": "Config",
            "impl": "./StreetSmartModel",
            "provides": [
                "dn_streetsmart.StreetSmartModel"
            ],
            "propertiesConstructor": true,
            "properties": {
                "streetSmartProperties": {
                    "apiKey": "",
                    "username": "",
                    "password": "",
                    "srs": "",
                    "locale": "de",
                    "overlayDrawDistance": 30,
                    "addressSettings": {
                        "locale": "de",
                        "database": "Nokia"
                    },
                    "panoramaViewerInstance": null,
                    "panoramaViewerMaximizable": false
                },
                "streetSmartLayerId": null,
                "useMapCenterLocation": false,
                "mapCenterLocationDelay": 100,
                "closeOnNoData": true,
                "initialViewScale": 2500,
                "minScale": null,
                "markerSymbols": {
                    "normal": {
                        "type": "picture-marker",
                        "url": "resource('./images/green/streetViewMarker.png')",
                        "width": 30,
                        "height": 30
                    },
                    "dragging": {
                        "type": "picture-marker",
                        "url": "resource('./images/green/streetViewMarkerDragging.png')",
                        "width": 30,
                        "height": 30
                    },
                    "available": {
                        "type": "picture-marker",
                        "url": "resource('./images/green/streetViewMarkerAvailable.png')",
                        "width": 30,
                        "height": 30
                    }
                },
                "measurementSymbols": {
                    "point": {
                        "type": "simple-marker",
                        "color": [
                            236,
                            122,
                            8,
                            0.25
                        ],
                        "size": 16,
                        "outline": {
                            "color": [
                                236,
                                122,
                                8,
                                1
                            ],
                            "width": 2
                        }
                    },
                    "polyline": {
                        "type": "simple-line",
                        "width": 1.3,
                        "color": [
                            236,
                            122,
                            8,
                            1
                        ]
                    },
                    "polygon": {
                        "type": "simple-fill",
                        "color": [
                            236,
                            122,
                            8,
                            0.25
                        ],
                        "style": "solid",
                        "outline": {
                            "color": [
                                236,
                                122,
                                8,
                                1
                            ],
                            "width": 2
                        }
                    },
                    "text": {
                        "type": "text",
                        "color": "white",
                        "haloColor": "black",
                        "haloSize": "1px",
                        "font": {
                            "size": 12,
                            "weight": "bold"
                        }
                    }
                }
            }
        },
        {
            "name": "StreetSmartWidgetFactory",
            "provides": [
                "dijit.Widget"
            ],
            "instanceFactory": true,
            "properties": {
                "widgetRole": "streetSmartWidget",
                "iFrameUrl": "resource('./template/streetsmart.html')"
            },
            "references": [
                {
                    "name": "_streetSmartController",
                    "providing": "dn_streetsmart.StreetSmartController"
                }
            ]
        },
        {
            "name": "MarkerController",
            "provides": [
                "dn_streetsmart.MarkerController"
            ],
            "references": [
                {
                    "name": "_streetSmartModel",
                    "providing": "dn_streetsmart.StreetSmartModel"
                },
                {
                    "name": "_mapWidgetModel",
                    "providing": "map-widget.MapWidgetModel"
                }
            ]
        },
        {
            "name": "MeasurementController",
            "provides": [
                "dn_streetsmart.MeasurementController"
            ],
            "references": [
                {
                    "name": "_streetSmartModel",
                    "providing": "dn_streetsmart.StreetSmartModel"
                },
                {
                    "name": "_transformer",
                    "providing": "geojson.Transformer"
                },
                {
                    "name": "_highlighter",
                    "providing": "highlights.HighlightService"
                }
            ]
        },
        {
            "name": "StreetSmartToggleTool",
            "impl": "ct/tools/Tool",
            "provides": [
                "ct.tools.Tool"
            ],
            "propertiesConstructor": true,
            "properties": {
                "id": "streetSmartToggleTool",
                "title": "${tool.title}",
                "tooltip": "${tool.tooltip}",
                "toolRole": "toolset",
                "togglable": true,
                "iconClass": "icon-street-view",
                "activateHandler": "activateStreetSmart",
                "deactivateHandler": "deactivateStreetSmart",
                "rules": {
                    "noGroup": true
                }
            },
            "references": [
                {
                    "name": "handlerScope",
                    "providing": "dn_streetsmart.StreetSmartController"
                }
            ]
        },
        {
            "name": "StreetSmartModeToggleTool",
            "impl": "ct/tools/Tool",
            "provides": [
                "ct.tools.Tool",
                "dn_streetsmart.StreetSmartModeToggleTool"
            ],
            "propertiesConstructor": true,
            "properties": {
                "id": "streetSmartModeToggleTool",
                "title": "${tool.title}",
                "tooltip": "${tool.tooltip}",
                "toolRole": "toolset",
                "iconClass": "icon-street-view",
                "togglable": false,
                "visibility": false,
                "clickHandler": "toggleStreetSmartMode",
                "rules": {
                    "noGroup": true
                }
            },
            "references": [
                {
                    "name": "handlerScope",
                    "providing": "dn_streetsmart.StreetSmartController"
                }
            ]
        }
    ]
}
